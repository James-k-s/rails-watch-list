
<div class="list-title">
  <h1><u><%= @list.name%> movies:</u></h1>
</div>
<br>

<% @list.bookmarks.each do |bookmark| %>
  <ul>
    <li><h3><%= Movie.find(bookmark.movie_id).title %><%= link_to "    🗑️", bookmark_path(bookmark), class: "bin", data: {turbo_method: :delete, turbo_confirm: "Are you sure"} %></h3></li>
  <ul>
    <li><%= bookmark.comment %></li>
  </ul>
  </ul>
<% end %>
<br>
<br>
<%= link_to "➕ Add a movie bookmark", new_list_bookmark_path(@list), class: "add-button" %>
