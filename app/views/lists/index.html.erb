<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @movie.poster_url%>')">

</div>
<div class="movies-title">
  <h1><u>Movies</u></h1>
</div>

<div class="movie-cards">
  <% @movies.each do |movie| %>
    <div class="movie">
    <img src="<%=movie.poster_url%>" alt=""class="movie-cards-img">
    <p><%= movie.title %></p>
    </div>
  <% end %>
</div>

<div>
<h1 id="lists"><u>Your lists</u></h1>
<%= link_to "âž• Add a new list", new_list_path, class: "add-button" %>

</div>
<div class="cont">
  <div class="lists">
    <% @lists.each do |list|%>
      <ul>
        <li><h2><%= link_to list.name, list_path(list)%></h2></li>
      </ul>
    <% end %>
  </div>
</div>
<hr>
